<h3>Your Items</h3>

<div class="container-fluid" style="display: flex; flex-wrap: wrap; justify-content: space-evenly;  " >
<% @items.each do |item| %>
  <div class="card mb-2 shadow" style="width: 18rem;">
    <img src=<%= item.image %> class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= link_to item.name, item_path(item) %> </h5>
      <%= link_to 'Edit', edit_item_path(item), class: "btn btn-outline-secondary" %>
      <%= link_to 'Delete', item_path(item), class: "btn btn-outline-secondary", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  </div>
  <% end %>
</div>
