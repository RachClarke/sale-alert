<div class="container" style="display: flex; justify-content: center;">
  <div class="shadow p-3" style="width: 60%;">

    <%= simple_form_for(item) do |f| %>
      <%= f.input :name %>
      <%= f.input :image %>
      <%= f.input :url %>
      <%= f.input :current_price %>
      <%= f.association :shop %>
      <%= f.button :submit, class: "btn-block btn-primary" %>
    <% end %>

  </div>
</div>
